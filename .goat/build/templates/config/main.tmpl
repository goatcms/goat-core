{{$smtpPath := (print .To "/tests/smtp.json")}}
{{$postgresPath := (print .To "/tests/db_postgres.json")}}

{{if not (.Filesystem.IsFile $smtpPath)}}
  {{.Out.File $smtpPath -}}
    {{template "smtp" .}}
  {{.Out.EOF}}
